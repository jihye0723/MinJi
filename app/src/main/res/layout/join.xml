<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 정보를 입력하여 주세요."
        android:layout_margin="40dp"
        android:textStyle="bold"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디를 입력하세요."
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginHorizontal="35dp"/>


    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textbox"
        android:hint="ID"
        android:padding="10dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호를 입력하세요."
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginHorizontal="35dp"/>


    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textbox"
        android:hint="PW"
        android:padding="10dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호를 한번 더 입력하세요."
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginHorizontal="35dp"/>


    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/textbox"
        android:hint="PW"
        android:padding="10dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="닉네임을 입력하세요."
        android:textStyle="bold"
        android:padding="7dp"
        android:layout_marginHorizontal="35dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <EditText
            android:id="@+id/getusername"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/textbox"
            android:hint="이쁜걸로 하세요 ♡"
            android:padding="10dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/user_same"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_toRightOf="@+id/getusername"
            android:backgroundTint="@color/purple_200"
            android:text="중복확인"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" />

    </RelativeLayout>
    // 이미지 불러와서 추가
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="35dp"
        android:layout_marginHorizontal="50dp">
        // 사진 추가하기
        <ImageView
            android:id="@+id/user_Image"
            android:layout_width="77dp"
            android:layout_height="76dp"
            android:layout_gravity="center_vertical|left"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_image_24" />

        <TextView
            android:id="@+id/getImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진을 등록하여 주세요"
            android:padding="7dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/user_Image"/>

        <Button
            android:layout_width="61dp"
            android:layout_height="35dp"
            android:layout_below="@+id/getImage"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/user_Image"
            android:backgroundTint="#FFDCDCDC"
            android:text="찾기"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </RelativeLayout>\

    // 확인 , 취소 버튼

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/user_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffdedede"
            android:text="취소"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:layout_marginStart="200dp"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/user_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="확인"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/user_cancel"/>
    </RelativeLayout>







</LinearLayout>